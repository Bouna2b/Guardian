generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model scans {
  id         String   @id @default(uuid())
  user_id    String?
  source     String?
  title      String?
  content    String?
  url        String?
  sentiment  String?
  created_at DateTime @default(now())
}

model deletions {
  id         String   @id @default(uuid())
  user_id    String?
  site       String?
  platform   String?
  status     String   @default("pending")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model identities {
  id           String  @id @default(uuid())
  user_id      String?
  document_url String?
  verified     Boolean @default(false)
}

model subscriptions {
  id      String  @id @default(uuid())
  user_id String?
  plan    String  @default("free")
  active  Boolean @default(true)
}

model mandates {
  id      String  @id @default(uuid())
  user_id String?
  pdf_url String?
  signed  Boolean @default(false)
}
